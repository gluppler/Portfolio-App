---
// src/components/MeteorShower.astro
---
<div class="absolute top-1/2 left-1/2 h-full w-full -translate-x-1/2 -translate-y-1/2 overflow-hidden">
    <div class="absolute top-0 left-0 h-full w-full">
        {Array.from({ length: 15 }).map(() => (
            <div
                class="absolute h-[2px] w-[200px] animate-meteor rounded-full bg-gradient-to-r from-slate-500/5 to-transparent"
                style={{
                    top: `${Math.random() * 100}%`,
                    left: `${Math.random() * 100}%`,
                    animationDelay: `${Math.random() * 6}s`,
                    animationDuration: `${Math.floor(Math.random() * (10 - 3 + 1)) + 3}s`,
                }}
            />
        ))}
    </div>
</div>
